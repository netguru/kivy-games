#:kivy 2.0

<MenuScreen>:
    name: 'menu'
    BoxLayout:
        anchor_y: 'bottom'  
        orientation:'horizontal'
        size_hint: (1, 0.1)
        Button:
            text: 'Home'
            font_size: 48
            on_press: app.root.current = 'home'
        Button:
            text: 'Exit'
            font_size: 48
            on_press: exit()
