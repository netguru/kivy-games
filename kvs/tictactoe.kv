#: kivy 2.0

<Tile@Button>:
    font_size: '45sp'
    color: 1 , 2 , 0 , 1

<TicTacToe>:
    name: 'tictactoe'
    AnchorLayout:
        anchor_y: 'top'
        MenuScreen:
        BoxLayout:
            orientation:'horizontal'
            size_hint: (1, 0.9)
            GridLayout:
                rows: 3
                cols: 3
                Tile:
                    id: root.tile_00
                    name: '00'
                    text: ''
                    on_press: root.make_move(self);
                Tile:
                    id: root.tile_01
                    name: '01'
                    on_press: root.make_move(self);
                Tile:
                    id: root.tile_02
                    name: '02'
                    on_press: root.make_move(self);
                Tile:
                    id: root.tile_10
                    name: '10'
                    on_press: root.make_move(self);
                Tile:
                    id: root.tile_11
                    name: '11'
                    on_press: root.make_move(self);
                Tile:
                    id: root.tile_12
                    name: '12'
                    on_press: root.make_move(self);
                Tile:
                    id: root.tile_20
                    name: '20'
                    on_press: root.make_move(self);
                Tile:
                    id: root.tile_21
                    name: '21'
                    on_press: root.make_move(self);
                Tile:
                    id: root.tile_22
                    name: '22'
                    on_press: root.make_move(self);
            BoxLayout:
                orientation:'vertical'
                Label:
                    text:'Leaderboard'
                    font_size: '36dp'
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'top'
                    GridLayout:
                        cols: 2
                        rows: 5
                        Label:
                            text: 'Players'
                            font_size: '22dp'
                        Label:
                            text: 'Scores'
                            font_size: '22dp'
                        Label:
                            text: '{}{} ({})'.format('*' if root.player1.active else '', root.player1.name, root.player1.dice)
                            font_size: '15dp'
                        Label:
                            text: str(root.player1.score)
                            font_size: '15dp'
                        Label:
                            text: '{}{} ({})'.format('*' if root.player2.active else '', root.player2.name, root.player2.dice)
                            font_size: '15dp'
                        Label:
                            text: str(root.player2.score)
                            font_size: '15dp'
                        Label:
                            text: 'Draw'
                            font_size: '15dp'
                        Label:
                            text: '0'
                            font_size: '15dp'
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'top'
                    BoxLayout:
                        orientation:'horizontal'
                        size_hint: (0.8, 0.2)
                        spacing: '10dp'
                        Button:
                            text: 'Restart'
                            font_size: '16dp'
                            on_press: root.restart()
                        Button:
                            text: 'Reset Leaderboard'
                            font_size: '16dp'
                            on_press: root.reset_scores()
